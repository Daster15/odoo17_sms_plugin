<odoo>
  <record id="email_template_campaign_report" model="mail.template">
    <field name="name">Raport kampanii SMS</field>
    <field name="model_id" ref="model_sms_campaign"/>
    <field name="subject">Raport kampanii SMS: ${object.name}</field>
    <field name="email_from">${(user.email or 'info@example.com')}</field>
    <field name="email_to">${user.stats_email}</field>
    <field name="body_html"><![CDATA[
      <p>W załączniku znajduje się raport kampanii SMS: <strong>${object.name}</strong>.</p>
    ]]></field>
  </record>
</odoo>
