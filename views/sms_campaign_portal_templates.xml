  <!-- Inicjalizacja wykresu -->
  <xpath expr="//body" position="before_end">
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      // Wstrzykujemy gotowe tablice
      var labels = <t t-raw="chart_labels_json"/>;
      var values = <t t-raw="chart_values_json"/>;

      var ctx = document.getElementById('smsStatusChart').getContext('2d');
      new Chart(ctx, {
        type: 'pie',
        data: {
          labels: labels,
          datasets: [{ data: values }]
        },
        options: {
          responsive: true,
          plugins: { legend: { position: 'bottom' } }
        }
      });
    });
  </script>
</xpath>


